<Window x:Class="NolakLoans.BackupDatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NolakLoans"
        mc:Ignorable="d"
        Title="Backup DB" Height="228.151" Width="581.933" Background="#FF8D8D8D">
    <StackPanel ClipToBounds="True" VerticalAlignment="Center" HorizontalAlignment="Center">

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBox x:Name="backupLocation" Margin="3,0,5,0" Width="300" BorderBrush="Black" />
            <Button Content="  Select Backup Folder  " Click="getBackupLocation"/>
        </StackPanel>
        <StackPanel>
            <Button Content="Backup DB" Click="backupDatabase" Margin="0,15,0,0" />
        </StackPanel>

    </StackPanel>
</Window>
